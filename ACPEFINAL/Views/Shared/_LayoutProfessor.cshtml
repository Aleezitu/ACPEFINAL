<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ACPEFINAL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style-padrao.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ACPEFINAL.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="wrapper">
    <header class="d-flex flex-wrap align-items-center justify-content-center mb-4 border-bottom">
        <a href="/" class="d-flex mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-3">
                <img src="~/img/logoacpe.png" style="width: 50px;" alt="logo do projeto de Auxiliar de Comunicação entre Pais e Escola" />
            </span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item">
                <a asp-controller="Professor" asp-action="Index" class="nav-link @(ViewData["Title"] == "Home Professor" ? "active" : "")" aria-current="page">Home</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Professor" asp-action="Perfil" class="nav-link @(ViewData["Title"] == "Perfil Professor" ? "active" : "")">Perfil</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Professor" asp-action="Recados" class="nav-link @(ViewData["Title"] == "Cadastrar Recados" ? "active" : "")">Recados</a>
            </li>
@*            <li class="nav-item">
                <a asp-controller="Professor" asp-action="Tarefas" class="nav-link @(ViewData["Title"] == "Cadastrar Tarefas" ? "active" : "")">Tarefas</a>
            </li>
            <li class="nav-item">
                <a href="ajuda-professor.html" class="nav-link">Ajuda</a>
            </li>*@
            <li class="nav-item">
                <a asp-controller="Login" asp-action="Logout" class="nav-link">Logout</a>
            </li>
        </ul>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="rodape">
        <p>Desenvolvido por &copy;Grupo 7</p>
    </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
