<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ACPEFINAL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ACPEFINAL.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-3">
                <img src="~/img/logoacpe.png" style="width: 50px;" alt="logo do projeto de Auxiliar de Comunicação entre Pais e Escola" />
            </span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item">
                <a asp-controller="Aluno" asp-action="Index" class="nav-link @(ViewData["Title"] == "Home Aluno" ? "active" : "")" aria-current="page">Home</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Aluno" asp-action="Perfil" class="nav-link @(ViewData["Title"] == "Perfil do Aluno" ? "active" : "")">Perfil</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Aluno" asp-action="Recados" class="nav-link @(ViewData["Title"] == "Recados do Aluno" ? "active" : "")">Recados</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Aluno" asp-action="Tarefas" class="nav-link @(ViewData["Title"] == "Tarefas do Aluno" ? "active" : "")">Tarefas</a>
            </li>
            <li class="nav-item">
                <a href="ajuda-professor.html" class="nav-link">Ajuda</a>
            </li>
            <a asp-controller="Login" asp-action="Logout" class="nav-link">Logout</a>
        </ul>
    </header>



    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2023 - Desenvolvido pelo Grupo 7
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
