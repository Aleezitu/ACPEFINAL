<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ACPEFINAL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ACPEFINAL.styles.css" asp-append-version="true" />
</head>
<body>

    <header class="d-flex flex-wrap justify-content-around align-items-center py-3 mb-4 border-bottom">
        <a href="home-page.html" >
            <img src="~/img/logoacpe.png" style="width: 50px;" alt="logo do projeto de Auxiliar de Comunicação entre Pais e Escola" />
        </a>
        <ul class="nav nav-pills d-flex flex-row gap-3">
            <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark" >Home</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="AreaAjuda" class="btn btn-outline-dark">Ajuda</a></li>
            <li class="nav-item"><a asp-controller="Login" asp-action="Index" class="btn btn-outline-dark">login</a></li>
        </ul>
    </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2023 - Desenvolvido pelo Grupo 7
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
