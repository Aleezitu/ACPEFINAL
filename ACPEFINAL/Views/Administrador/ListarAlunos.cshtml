@model ACPEFINAL.Models.AlunoEnderecoLogin

@{
    ViewData["Title"] = "Listar Alunos";
}

<link href="~/css/admin.css" rel="stylesheet" />

<div class="title-padrao">
    <h1 class="text-center">Listar Alunos</h1>
</div>

<div class="container">
    <div class="container-table">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Sexo</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Data de Criação</th>
                    <th>Rua</th>
                    <th>Número</th>
                    <th>Complemento</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>País</th>
                    <th>Sigla</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Aluno.Count; i++)
                {
                    <tr>
                        <td>@Model.Aluno[i].Nome</td>
                        <td>@Model.Aluno[i].Cpf</td>
                        <td>@Model.Aluno[i].DataNascimento</td>
                        <td>@Model.Aluno[i].Sexo</td>
                        <td>@Model.Aluno[i].Telefone</td>
                        <td>@Model.Aluno[i].Email</td>
                        <td>@Model.Aluno[i].DataCriacao</td>
                        <td>@Model.Endereco[i].Rua</td>
                        <td>@Model.Endereco[i].Numero</td>
                        <td>@Model.Endereco[i].Complemento</td>
                        <td>@Model.Endereco[i].Cidade</td>
                        <td>@Model.Endereco[i].Estado</td>
                        <td>@Model.Endereco[i].Pais</td>
                        <td>@Model.Endereco[i].Sigla</td>
                        <td>
                            @Html.ActionLink("Editar", "EditarAlunos", new { id = @Model.Aluno[i].Id }) |
                            @Html.ActionLink("Deletar", "DeleteAluno", new { id = @Model.Aluno[i].Id }) <Button class="btns editar">@Html.ActionLink("Editar", "EditarAlunos", new { id = @Model.Aluno[i].Id })</button>
                            <button class="btns excluir">@Html.ActionLink("Deletar", "Delete", new { id = @Model.Aluno[i].Id })</button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
