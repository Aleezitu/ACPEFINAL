@*@model IEnumerable<ACPEFINAL.Models.ProfessorEndereco>
*@
@model ACPEFINAL.Models.ProfessorEndereco

@{
    ViewData["Title"] = "Listar Professores";
}

<link href="~/css/admin.css" rel="stylesheet" />


<div class="title-padrao">
    <h1 class="text-center">Listar Professores</h1>
</div>

<div class="container">
    <div class="btns">
        <a asp-action="Create" class="criar btn">Criar Novo</a>
        <a asp-action="" class="editar btn">Editar Usuário</a>
        <a asp-action="" class="excluir btn">Excluir Usuário</a>
    </div>
    <div class="container-table">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de Nascimento</th>
                    <th>Sexo</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Formacao</th>
                    <th>Data de Criação</th>

                    <th>Rua</th>
                    <th>Número</th>
                    <th>Complemento</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>País</th>
                    <th>Sigla</th>
                    <th>Acoes</th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Professor.Count; i++)
                {
                    <tr>
                        <td>@Model.Professor[i].Nome</td>
                        <td>@Model.Professor[i].Cpf</td>
                        <td>@Model.Professor[i].DataNascimento</td>
                        <td>@Model.Professor[i].Sexo</td>
                        <td>@Model.Professor[i].Telefone</td>
                        <td>@Model.Professor[i].Email</td>
                        <td>@Model.Professor[i].Formacao</td>
                        <td>@Model.Professor[i].DataCriacao</td>

                        <td>@Model.Endereco[i].Rua</td>
                        <td>@Model.Endereco[i].Numero</td>
                        <td>@Model.Endereco[i].Complemento</td>
                        <td>@Model.Endereco[i].Cidade</td>
                        <td>@Model.Endereco[i].Estado</td>
                        <td>@Model.Endereco[i].Pais</td>
                        <td>@Model.Endereco[i].Sigla</td>

                        <td>
                            @Html.ActionLink("Editar", "EditarProfessores", new { id = @Model.Professor[i].Id }) |
                            @Html.ActionLink("Deletar", "DeleteProfessor", new { id = @Model.Professor[i].Id }) |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
