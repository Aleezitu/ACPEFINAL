@model ACPEFINAL.Models.RecadosAlunos

@{
    ViewData["Title"] = "Cadastrar Recados";
}

<link href="~/css/recados-prof.css" rel="stylesheet" />

<div class="container">
    <div class="title-sessao">
        <h1>Adicionar Recados</h1>
    </div>
    <div class="container-form">
        <form class="" asp-controller="Professor" asp-action="Recados" method="post">
               <div class="form-group">
                    <label asp-for="Recado.Id">Selecione o aluno: </label>
                    <select class="form-control w-25" asp-for="Recado.Id">
                        @foreach (var item in Model.Alunos)
                        {
                            <option value="@item.Id">@item.Nome</option>
                        }
                    </select>
            </div>
                <div class="form-group">
                    <label asp-for="Recado.Assunto">Digite o assunto </label>
                    <input class="form-control w-25" asp-for="Recado.Assunto" />
                </div>
            <div class="form-group">
                    <label asp-for="Recado.Data">Data</label>
                <input class="form-control w-25" asp-for="Recado.Data" />
                </div>
            <div class="form-group">
                    <label asp-for="Recado.Descricao">Descrição</label>
                <input class="form-control w-50" asp-for="Recado.Descricao" />
                </div>
            <input type="submit" class="btn" value="Cadastrar">
        </form>
    </div>
</div>

